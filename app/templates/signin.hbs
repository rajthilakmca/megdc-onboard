{{#meg-layout layoutName="layouts/simple" }}
  {{#if redirected}}
  {{/if}}

  <div class="container signin">
    <section>
      <div id="container_demo">
        <div id="wrapper">
          <div id="login" class="form">
            {{#em-form model=model form_layout='horizontal' submit_button=false}}
            {{em-input property="email" label="email" placeholder="Enter a email..." type="text"}}
            {{em-input label="Password" property="password" placeholder="And password..." type="password" disabled=nameHasValue}}
              <div class="form-actions">
                <!--<input  disabled={{isntValid}} type="submit" class="btn btn-success" value="Login">-->
                  <button {{ action "LoginAccount" }} class="btn waves-effect waves-light mainColor">{{t "login.messages.sign_in"}}
                    <i class="material-icons right">exit_to_app</i>
                  </button>
                {{#if errorMessage}}
                  <div class="alert alert-danger form-signin-alert" role="alert">{{t 'login.messages.error'}} </div>
                {{/if}}
              </div>
            {{/em-form}}
          </div>

        </div>
      </div>
    </section>
  </div>
  <!-- /container -->

{{/meg-layout}}
