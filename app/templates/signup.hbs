{{#meg-layout layoutName="layouts/simple" }}
  {{#if redirected}}
  {{/if}}
  <div class="container signup">
    <section>
      <div id="container_demo">
        <div id="wrapper">
          <div id="register" class="form">
            {{#em-form model=model form_layout='horizontal' submit_button=false}}
              {{em-input property="name" label="Full Name" placeholder="Enter a name..." type="text"}}
              {{em-input property="email" label="email" placeholder="Enter a email..." type="text"}}
              {{em-input label="Password" property="password" placeholder="And password..."
              type="password" disabled=nameHasValue}} 
              {{em-input label="Password" property="passwordConfirmation" placeholder="And password..." type="password" disabled=nameHasValue}}
              <p>
                {{#if auth.signedOut}}
                  <button {{action "createAccount" }} class="btn waves-effect waves-light mainColor">
                    {{t "signup.create"}} <i class="material-icons right">input</i>
                  </button>
                {{/if}}
                {{#if auth.signingIn}}
                  <button class="btn waves-effect waves-light mainColor">
                  {{t "signup.onboarding"}} <i class="fa fa-circle-o-notch fa-spin"></i>
                  </button>
                {{/if}}
              </p>
              <p class="change_link">
                Already a member?
                <button class="signed-out button--signin" {{ action "signinPage"}}>{{t "signup.signin"}}</button>
              </p>
            {{/em-form}}

          </div>

        </div>
      </div>
    </section>
  </div>

{{/meg-layout}}
